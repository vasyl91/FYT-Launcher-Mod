<?xml version="1.0" encoding="utf-8"?>
<com.android.launcher66.PageIndicatorMarker android:layout_gravity="center_vertical"
    android:layout_width="16.0px"
    android:layout_height="16.0px"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/inactive"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/custom_content_page"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/active"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/custom_content_page"
        android:scaleType="centerInside"
        android:alpha="0.0"
        android:scaleX="0.5"
        android:scaleY="0.5" />
</com.android.launcher66.PageIndicatorMarker>