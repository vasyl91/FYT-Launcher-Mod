<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pipPreferenceRestart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeightSmall"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <androidx.constraintlayout.widget.ConstraintLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent">  

        <LinearLayout
            android:id="@+id/text_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btnRestartFirst" >

            <TextView
                android:id="@android:id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItem"
                android:ellipsize="end"
                android:singleLine="true"
                android:paddingTop="16dp" />

            <TextView
                android:id="@android:id/summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItemSecondary"
                android:ellipsize="end"
                android:maxLines="5"
                android:paddingBottom="16dp"
                android:visibility="gone" />
        </LinearLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/btnScreenContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintWidth_percent="0.75"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/text_container"
            app:alignItems="center"
            app:flexWrap="wrap"
            app:flexDirection="row"
            app:justifyContent="space_around" >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRestartFirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restart 1"
                android:textColor="@android:color/white"
                app:layout_flexBasisPercent="20%" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRestartSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restart 2"
                android:textColor="@android:color/white"
                app:layout_flexBasisPercent="20%" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRestartThird"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restart 3"
                android:textColor="@android:color/white"
                app:layout_flexBasisPercent="20%" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRestartFourth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restart 4"
                android:textColor="@android:color/white"
                app:layout_flexBasisPercent="20%" />
        </com.google.android.flexbox.FlexboxLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
