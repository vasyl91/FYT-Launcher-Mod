<?xml version="1.0" encoding="utf-8"?>
<com.android.launcher66.PageIndicatorMarker android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="0.0px"
    android:layout_marginRight="0.0px"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:launcher="http://schemas.android.com/apk/res-auto/com.android.launcher66">

    <ImageView
        android:id="@id/inactive"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/indicator_normalbar"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@id/active"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/indicator_lightbar"
        android:scaleType="centerInside"
        android:alpha="0.0"
        android:scaleX="1.0"
        android:scaleY="1.0" />
</com.android.launcher66.PageIndicatorMarker>