<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:src="@drawable/hotseat_bg" />
    <LinearLayout 
        android:gravity="center_vertical" 
        android:orientation="horizontal" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" 
        android:layout_marginLeft="14.0dip" 
        android:layout_marginRight="270.0dip">
        <RelativeLayout 
            android:id="@id/m_bt_btn" 
            android:layout_width="0.0dip" 
            android:layout_height="wrap_content" 
            android:layout_weight="1.0">
            <ImageView 
                android:id="@id/ic_hotseat_bt" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:src="@drawable/car_bt_icon" 
                android:layout_centerHorizontal="true" />
            <TextView 
                android:textSize="16.0sp" 
                android:textColor="@color/text_color_white" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginBottom="20.0dip" 
                android:text="@string/car_bt" 
                android:singleLine="true" 
                android:layout_alignBottom="@id/ic_hotseat_bt" 
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <RelativeLayout 
            android:id="@id/m_eq_btn" 
            android:layout_width="0.0dip" 
            android:layout_height="wrap_content" 
            android:layout_weight="1.0">
            <ImageView 
                android:id="@id/ic_hotseat_eq" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:src="@drawable/car_eq_icon" 
                android:layout_centerHorizontal="true" />
            <TextView 
                android:textSize="16.0sp" 
                android:textColor="@color/text_color_white" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginBottom="20.0dip" 
                android:text="@string/car_eq" 
                android:singleLine="true" 
                android:layout_alignBottom="@id/ic_hotseat_eq" 
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <RelativeLayout 
            android:id="@id/m_allapp_btn" 
            android:layout_width="0.0dip" 
            android:layout_height="wrap_content" 
            android:layout_weight="1.0">
            <ImageView 
                android:id="@id/ic_hotseat_app" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:src="@drawable/all_apps_btn_icon" 
                android:layout_centerHorizontal="true" />
            <TextView 
                android:textSize="16.0sp" 
                android:textColor="@color/text_color_white" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginBottom="20.0dip" 
                android:text="@string/car_app" 
                android:singleLine="true" 
                android:layout_alignBottom="@id/ic_hotseat_app" 
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <RelativeLayout 
            android:id="@id/m_settings_btn" 
            android:layout_width="0.0dip" 
            android:layout_height="wrap_content" 
            android:layout_weight="1.0">
            <ImageView 
                android:id="@id/ic_hotseat_settings" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:src="@drawable/car_settings_icon" 
                android:layout_centerHorizontal="true" />
            <TextView 
                android:textSize="16.0sp" 
                android:textColor="@color/text_color_white" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginBottom="20.0dip" 
                android:text="@string/car_settings" 
                android:singleLine="true" 
                android:layout_alignBottom="@id/ic_hotseat_settings" 
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout 
        android:id="@id/m_navi_btn" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginRight="14.0dip" 
        android:layout_alignParentRight="true">
        <ImageView 
            android:id="@id/ic_hotseat_navi" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:src="@drawable/car_navi_icon" 
            android:layout_centerHorizontal="true" />
        <TextView 
            android:textSize="16.0sp" 
            android:textColor="@color/text_color_white" 
            android:id="@id/tv_app" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginBottom="20.0dip" 
            android:text="@string/car_navi" 
            android:singleLine="true" 
            android:layout_alignBottom="@id/ic_hotseat_navi" 
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>