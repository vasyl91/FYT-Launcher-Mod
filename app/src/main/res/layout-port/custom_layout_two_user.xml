<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">  

    <!-- Workspace -->
    <AbsoluteLayout
        android:id="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp" />

    <!-- Bottom Bar -->
    <ImageView
        android:id="@+id/iv_list_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1638"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"
        android:src="@drawable/app_list_bg" />
        
    <ImageView
        android:id="@+id/rl_allapps"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintWidth_percent="0.09"
        app:layout_constraintBottom_toBottomOf="@+id/iv_list_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_list_bg"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/all_apps_btn_icon" />

    <ImageView
        android:id="@+id/show_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintWidth_percent="0.06"
        app:layout_constraintBottom_toBottomOf="@+id/iv_list_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_list_bg"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/iv_list_bg"
        app:layout_constraintEnd_toEndOf="@+id/iv_list_bg"
        android:src="@drawable/show_bar"
        android:scaleType="fitCenter"
        android:visibility="invisible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1638"
        app:layout_constraintWidth_percent="0.4395"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_list_bg"
        app:layout_constraintRight_toLeftOf="@id/rl_music_two"
        app:layout_constraintLeft_toRightOf="@id/rl_allapps" />

    <!-- Bottom Bar Music -->
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/rl_music_two"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1638"
        app:layout_constraintWidth_percent="0.28"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_list_bg"
        app:layout_constraintRight_toRightOf="@id/bar_widget_date"
        app:layout_constraintLeft_toRightOf="@id/recycler_view"
        app:alignItems="center"
        app:flexWrap="wrap"
        app:flexDirection="row"
        app:justifyContent="space_evenly" >

        <ImageView
            android:id="@+id/iv_album_bg_two"
            android:tag="@string/skin_ruleless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/music_album_def"
            android:layout_centerHorizontal="true"
            app:layout_flexBasisPercent="25%" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            app:flexWrap="wrap"
            app:flexDirection="column"
            app:alignContent="center"
            app:justifyContent="center"
            app:layout_flexBasisPercent="70%" >

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                app:flexWrap="wrap"
                app:flexDirection="column"
                app:alignContent="center"
                app:justifyContent="center"
                app:layout_flexBasisPercent="50%" >

                <TextView
                    android:id="@+id/tv_musicName_two"
                    android:textSize="0sp"
                    android:textColor="@android:color/white"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/music_name"
                    android:singleLine="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/tv_artist_two"
                    android:textSize="0sp"
                    android:textColor="#aaffffff"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/music_name"
                    android:singleLine="true"
                    android:layout_centerHorizontal="true" />

            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                app:flexWrap="wrap"
                app:flexDirection="row"
                app:justifyContent="space_between"
                app:layout_flexBasisPercent="45%" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_layout_prev_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_flexGrow="1"
                    app:layout_constraintDimensionRatio="1:1">

                    <Button
                        android:id="@+id/music_prev_two"
                        android:background="@drawable/btn_ic_prev"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_layout_playpause_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_flexGrow="1"
                    app:layout_constraintDimensionRatio="1:1">

                    <Button
                        android:id="@+id/music_playpause_two"
                        android:background="@drawable/music_pause_icon"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_layout_next_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_flexGrow="1"
                    app:layout_constraintDimensionRatio="1:1">

                    <Button
                        android:id="@+id/music_next_two"
                        android:background="@drawable/btn_ic_next"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.flexbox.FlexboxLayout>
        </com.google.android.flexbox.FlexboxLayout>
    </com.google.android.flexbox.FlexboxLayout>

    <!-- Bottom Bar Date -->
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/bar_widget_date"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1638"
        app:layout_constraintWidth_percent="0.05"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_list_bg"
        app:layout_constraintRight_toRightOf="@id/bar_widget_weather"
        app:layout_constraintLeft_toRightOf="@id/rl_music_two"
        app:alignItems="center"
        app:flexWrap="wrap"
        app:flexDirection="column"
        app:justifyContent="space_around" >

        <com.fyt.widget.DateTwo
            android:textSize="0sp"
            android:textColor="@android:color/white"
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true" />

        <com.fyt.widget.WeekDayTwo
            android:textSize="0sp"
            android:textColor="@android:color/white"
            android:id="@+id/curWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"/>

    </com.google.android.flexbox.FlexboxLayout>

    <!-- Bottom Bar Weather -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bar_widget_weather"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1638"
        app:layout_constraintWidth_percent="0.12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_list_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bar_widget_date" >

        <ImageView
            android:id="@+id/weather_imge1"
            android:src="@drawable/weather02d"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.4"
            app:layout_constraintWidth_percent="1.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/weather_weather1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />    

        <TextView
            android:id="@+id/weather_weather1"
            android:textSize="0sp"
            android:textColor="@android:color/white"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:gravity="center_horizontal"
            android:text="@string/weather_not_available"
            android:singleLine="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintWidth_percent="1.0"
            app:layout_constraintTop_toBottomOf="@id/weather_imge1"
            app:layout_constraintBottom_toTopOf="@id/weather_city1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />    

        <TextView
            android:id="@+id/weather_city1"
            android:textSize="0sp"
            android:textColor="@android:color/white"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:gravity="center_horizontal"
            android:text="@string/weather_not_available"
            android:singleLine="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintTop_toBottomOf="@id/weather_weather1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/weather_temp1" />

        <TextView
            android:id="@+id/weather_temp1"
            android:textSize="0sp"
            android:textColor="@android:color/white"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:gravity="center_horizontal"
            android:text="@string/weather_not_available"
            android:singleLine="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintTop_toBottomOf="@id/weather_weather1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/weather_city1"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>