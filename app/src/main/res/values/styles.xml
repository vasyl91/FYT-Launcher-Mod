<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowLightStatusBar" >true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    
    <style name="ThemeTranslucent" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:windowFullscreen">false</item>
        <item name="android:defaultFocusHighlightEnabled">false</item>
    </style>
    
    <style name="ClingButton" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/cling_button_bg</item>
        <item name="android:paddingTop">15.0px</item>
        <item name="android:paddingBottom">15.0px</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/cling_dismiss</item>
        <item name="android:paddingStart">50.0px</item>
        <item name="android:paddingEnd">50.0px</item>
    </style>  

    <style name="ClingTitleText" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="android:textSize">22.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5.0px</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    
    <style name="ClingAltTitleText" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="android:textSize">24.0sp</item>
        <item name="android:textColor">#ff49c0ec</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ClingText" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#80000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>
    
    <style name="ClingHintText" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#80ffffff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    
    <style name="WorkspaceIcon" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    
    <style name="WorkspaceIcon.Portrait" parent="@style/WorkspaceIcon" />

    <style name="WorkspaceIcon.Landscape" parent="@style/WorkspaceIcon" />

    <style name="WorkspaceIcon.AppsCustomize" parent="@style/WorkspaceIcon">
        <item name="android:background">@null</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowRadius">4.0</item>
        <item name="android:drawablePadding">4.0px</item>
    </style>
    
    <style name="QSBBar" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="SearchDropTargetBar" parent="Theme.MaterialComponents.DayNight.Bridge" />

    <style name="SearchButton" parent="Theme.MaterialComponents.DayNight.Bridge" />

    <style name="DropTargetButtonContainer" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="android:layout_width">0.0px</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="DropTargetButton" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">4.0</item>
        <item name="android:drawablePadding">7.5dip</item>
        <item name="android:paddingStart">25.0px</item>
        <item name="android:paddingEnd">25.0px</item>
    </style>
    
    <style name="TabIndicator" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/tab_widget_indicator_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingStart">20.0px</item>
        <item name="android:paddingEnd">20.0px</item>
    </style>
    
    <style name="TabIndicator.AppsCustomize" parent="@style/TabIndicator" />
        
    <style name="MarketButton">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/workspace_all_apps_and_delete_zone_text_color</item>
        <item name="android:shadowColor">@color/workspace_all_apps_and_delete_zone_text_shadow_color</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:paddingStart">5.0px</item>
        <item name="android:paddingEnd">5.0px</item>
    </style>
    
    <style name="CustomClingTitleText" parent="Theme.MaterialComponents.DayNight.Bridge" />

    <style name="CustomClingText" parent="Theme.MaterialComponents.DayNight.Bridge" />

    <style name="music_btn_style" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="android:layout_width">64.0px</item>
        <item name="android:layout_height">49.0px</item>
        <item name="android:onClick">onExtraClick</item>
    </style>
    
    <style name="hotseat_layout" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/hotseat_layout_width</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="hotseat_textstyle" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="Translucent" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="android:windowBackground">@color/translucent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    
    <style name="SettingsTheme" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="android:actionBarTheme">@style/SettingsTheme.ActionBar</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/lollipopStatusBar</item>
    </style>
    
    <style name="SettingsTheme.ActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/colorAccent</item>
    </style>
    
    <style name="PreferenceCategoryStyle"  parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="android:actionBarTheme">@style/SettingsTheme.ActionBar</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:layout">@layout/nested_preference_category</item>
    </style>
    
    <style name="MyDialogActivityTheme" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    
    <style name="Theme.WallpaperCropper" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="android:actionBarStyle">@style/WallpaperCropperActionBar</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    

    <style name="Theme.WallpaperPicker" parent="Theme.WallpaperCropper">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>
    

    <style name="WallpaperCropperActionBar" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="android:displayOptions">showCustom</item>
        <item name="android:background">#88000000</item>
    </style>
    

    <style name="ActionBarSetWallpaperStyle" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="WidgetTheme" parent="Theme.MaterialComponents.DayNight.Bridge" />
    
</resources>